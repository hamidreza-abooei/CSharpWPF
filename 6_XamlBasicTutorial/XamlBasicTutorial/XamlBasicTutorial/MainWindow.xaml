<Window x:Class="XamlBasicTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlBasicTutorial"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="800" Loaded="Window_Loaded">
    <Border Padding="5" >
        <Grid >
            <!-- Grid Defenition -->
            
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height ="*"/>
                <RowDefinition Height ="Auto"/>
            </Grid.RowDefinitions>
            <!-- Controls -->
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Button Content="Item 1"/>
                <Button Content="Item 2" Margin="5 0"/>
                <Button Content="Item 3"/>
                <Button Content="Item 4" Margin="5 0"/>
                <Button Content="Item 5"/>
            </StackPanel>
            <TextBox Grid.Row="1"/>
            <TextBlock Grid.Row="2" Text="Status Bar"/> 


        </Grid>
    </Border>
</Window>
